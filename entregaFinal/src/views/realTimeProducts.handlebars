<link rel="stylesheet" href="/css/realTimeStyle.css">


<div class="container">
<h1 class="mt-4">Vista de productos en tiempo real</h1>
<button class="btn btn-primary"  type="button" id="viewProducts">Ver Productos</button>
</div>

<div class="container">
<h1 class="mt-4">Crear Nuevo Producto</h1>
<form id="addForm">
    <div class="row">
        <div class="col-4 mb-3">
            <label class="form-label" for="title">Title</label>
            <input type="text" required name="title">
        </div>
        <div class="col-4 mb-3">
            <label for="description">Description</label>
            <input type="text" required name="description">
        </div>
        <div class="col-4 mb-3">
            <label for="category">Category</label>
            <input type="text" required name="category">
        </div>
    </div>

    <div class="row">
        <div class="col-4 mb-3">
            <label for="price">Price</label>
            <input type="number" required name="price">
        </div>
        <div class="col-4 mb-3">
            <label for="stock">Stock</label>
            <input type="number" required name="stock">
        </div>
    </div>

    <div class="row">
        <div class="col-4 mb-3">
            <label for="code">Code</label>
            <input type="text" required name="code">
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Cargar Producto</button>
        </div>
    </div>
</form><br><br>

<h1 class="mt-4">Eliminar un Producto</h1>
<form id="deleteForm">
    <div class="row">
        <div class="col-4 mb-3">
            <label for="code">Code</label>
            <input type="text" required name="code">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Eliminar Producto</button>
        </div>
    </div>
</form>
    </div>
<div id='products-container'></div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>